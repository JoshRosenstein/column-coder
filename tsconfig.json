{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "alwaysStrict": true,
        "forceConsistentCasingInFileNames": true,
        "lib": [
            "es6"
        ],
        "noEmitOnError": true,
        "outDir": "dist-node",
        "declaration": false,
        "pretty": true,
        "rootDir": "src"
    },
    "include": [
        "src/**/*.ts"
    ]
}